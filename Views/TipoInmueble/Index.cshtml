@model IEnumerable<Inmobiliaria2Cuatri.Models.TipoInmueble>


@{
    ViewData["Title"] = "Listado de Tipos de Inmueble";
}

<div class="container mt-4">
    <h2>Listado de Tipos de Inmueble</h2>
    <a asp-action="Crear" class="btn btn-success mb-3">Crear Nuevo Tipo de Inmueble</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdTipoInmueble</td>
                    <td>@item.Nombre</td>
                    <td>@(item.Activo ? "Sí" : "No")</td>
                    <td>
                        <a asp-action="Edicion" asp-route-id="@item.IdTipoInmueble" class="btn btn-sm btn-warning">Editar</a>
                        <form asp-action="Eliminar" asp-route-id="@item.IdTipoInmueble" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
