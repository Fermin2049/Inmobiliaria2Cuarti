@model Inmobiliaria2Cuatri.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";

    // Variables para marcar las opciones del enum 'Uso'
    var selectedResidencial = Model.Uso == Inmobiliaria2Cuatri.Models.Uso.Residencial ? "selected" : "";
    var selectedComercial = Model.Uso == Inmobiliaria2Cuatri.Models.Uso.Comercial ? "selected" : "";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="col-md-6">
            <h1>Editar Inmueble</h1>
            <h4>Formulario de Edición de Inmueble</h4>
            <hr />

            <form asp-action="Edicion">
                <input type="hidden" asp-for="IdInmueble" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Campo para seleccionar Propietario -->
                <div class="form-group">
                    <label asp-for="IdPropietario" class="control-label">Propietario</label>
                    <select asp-for="IdPropietario" class="form-control" asp-items="ViewBag.PropietariosLista"></select>
                    <span asp-validation-for="IdPropietario" class="text-danger"></span>
                </div>

                <!-- Campo para seleccionar Tipo de Inmueble -->
                <div class="form-group">
                    <label asp-for="IdTipoInmueble" class="control-label">Tipo de Inmueble</label>
                    <select asp-for="IdTipoInmueble" class="form-control" asp-items="ViewBag.TiposInmueble"></select>
                    <span asp-validation-for="IdTipoInmueble" class="text-danger"></span>
                </div>

                <!-- Campo para Dirección -->
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <!-- Campo para Uso (enum) -->
                <div class="form-group">
                    <label asp-for="Uso" class="control-label">Uso</label>
                    <select asp-for="Uso" class="form-control">
                        <option value="">Seleccione un Uso</option>
                        <option value="1" {{ selectedResidencial }}>Residencial</option>
                        <option value="2" {{ selectedComercial }}>Comercial</option>
                    </select>
                    <span asp-validation-for="Uso" class="text-danger"></span>
                </div>

                <!-- Campo para Cantidad de Ambientes -->
                <div class="form-group">
                    <label asp-for="CantAmbiente" class="control-label"></label>
                    <input asp-for="CantAmbiente" class="form-control" />
                    <span asp-validation-for="CantAmbiente" class="text-danger"></span>
                </div>

                <!-- Campo para Valor -->
                <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>

                <!-- Campo para Estado -->
                <div class="form-group form-check">
                    <input asp-for="Estado" type="checkbox" class="form-check-input" />
                    <label asp-for="Estado" class="form-check-label">Activo</label>
                </div>

                <!-- Campo para Disponible -->
                <div class="form-group form-check">
                    <input asp-for="Disponible" type="checkbox" class="form-check-input" />
                    <label asp-for="Disponible" class="form-check-label">Disponible</label>
                </div>

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
