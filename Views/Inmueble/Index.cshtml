@model IEnumerable<Inmobiliaria2Cuatri.Models.Inmueble>
@{
    ViewData["Title"] = "Listado de Inmueble";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center mb-4">
                <h1 class="display-4">Listado de Inmuebles</h1>
            </div>
            <h4 class="text-center mb-4">
                <a asp-action="Crear" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Crear Nuevo Inmueble
                </a>
            </h4>

            <!-- Barra de búsqueda -->
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="searchInput" placeholder="Buscar inmueble..." aria-label="Buscar inmueble" />
                <span class="input-group-text"><i class="fas fa-search"></i></span>
            </div>

            <table class="table table-hover table-bordered table-striped align-middle" id="inmueblesTable">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().IdInmueble)</th>
                        <th>@Html.DisplayNameFor(model => model.First().IdPropietario)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Direccion)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Uso)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Tipo)</th>
                        <th>@Html.DisplayNameFor(model => model.First().CantAmbiente)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Valor)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Estado)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.IdInmueble)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdPropietario)</td>
                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Uso)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                            <td>@Html.DisplayFor(modelItem => item.CantAmbiente)</td>
                            <td>@Html.DisplayFor(modelItem => item.Valor)</td>
                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                            <td>
                                <a asp-action="Edicion" asp-route-id="@item.IdInmueble" class="btn btn-sm btn-warning mx-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                @Html.ActionLink("Detalles", "Details", new { id = item.IdInmueble }, new { @class = "btn btn-sm btn-info mx-1" })
                                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.IdInmueble }, new { @class = "btn btn-sm btn-danger mx-1", @onclick = "return confirm('¿Está seguro que desea eliminar este propietario?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Script para búsqueda en la tabla -->
<script>
    document.getElementById('searchInput').addEventListener('keyup', function() {
        var input = this.value.toLowerCase();
        var rows = document.querySelectorAll('#inmueblesTable tbody tr');
        rows.forEach(row => {
            row.style.display = row.textContent.toLowerCase().includes(input) ? '' : 'none';
        });
    });
</script>
