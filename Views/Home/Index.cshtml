@model Inmobiliaria2Cuatri.Models.DashboardViewModel

<div class="container">
    <h1>Dashboard</h1>
    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Propietarios</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.TotalPropietarios</h5>
                    <a href="/Propietario" class="btn btn-light">Ver Propietarios</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Inquilinos</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.TotalInquilinos</h5>
                    <a href="/Inquilino" class="btn btn-light">Ver Inquilinos</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Inmuebles</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.TotalInmuebles</h5>
                    <a href="/Inmueble" class="btn btn-light">Ver Inmuebles</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header">Usuarios</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.TotalUsuarios</h5>
                    <a href="/Usuario" class="btn btn-light">Ver Usuarios</a>
                </div>
            </div>
        </div>
    </div>
</div>