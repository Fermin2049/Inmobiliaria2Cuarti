@model List<string>

<h2>Modificar Avatar</h2>

<!-- Formulario para subir una nueva imagen -->
<form asp-action="SubirAvatar" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="avatar">Selecciona una imagen para tu avatar</label>
        <input type="file" name="Avatar" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Subir Avatar</button>
</form>

<!-- Mostrar las imágenes disponibles -->
<h3>Avatares disponibles:</h3>
@if (Model != null && Model.Any())
{
    @foreach (var url in Model)
    {
        <div>
            <img src="@url" alt="Avatar" style="width:100px;height:100px;" />
        </div>
    }
}
else
{
    <p>No hay imágenes disponibles.</p>
}

